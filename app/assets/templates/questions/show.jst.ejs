
  <li class="list-group-item question-results">
    <h4 class="list-group-item-heading">
      <%= question.escape('text') %>
    </h4>
    <div data-question-id="<%= question.id %>">
      <div class="col-xs-6">
        <% question.answers().forEach(function(answer) { %>
          <p>
            <%= answer.escape('text') %>
          </p>
          <% }); %>
      </div>
      <div class="col-xs-6">
        <% percentages.forEach(function(percentage) { %>
          <p>
            <%= percentage %>
          </p>
          <% }); %>
      </div>
    </div>
    <div class="chart-area">
      <canvas data-question-id="<%= question.id %>" width="300" height="300">
      </canvas>
    </div>
  </li>

    <li class="list-group-item">
      <h4 class="list-group-item-heading">
        <%= question.escape('text') %>
      </h4>
      <form data-poll-id="<%= question.poll_id %>">
        <% question.answers().forEach(function(answer) { %>
          <div class="radio-inline">
            <label>
              <input type="radio" name="response[answer_id]" value="<%= answer.id %>">
              <%= answer.escape('text') %>
            </label>
          </div>
          <% }); %>
      </form>
    </li>
