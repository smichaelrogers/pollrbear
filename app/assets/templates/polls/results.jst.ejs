<% var i = 0; %>
<% if (total > 0) { %>
    <% answers.forEach(function(answer) { %>
        <span class="answer-result-heading">
            <strong style="color: <%= colors[i] %>">
                <%= percentages[i] %>%</strong> of people selected answer:</span>
        <span class="answer-result-text">
            <strong style="color: <%= colors[i] %>">
                <%= labels[i] %>:</strong>
            <%= answer.attributes.text %></span>
        <% i++; %>
            <% }); %>
<% } else { %>
  <h3 class="page-title" style="margin-bottom: 100px;">Not enough votes</h3>
<% }; %>
