<div class="col-xs-12 col-md-12 col-lg-8">
  <div class="panel panel-primary" id="new-poll-panel">
    <div class="panel-heading">
      <h3 class="panel-title">New Poll</h3>
    </div>
    <div class="panel-body">
      <form class="form-horizontal" id="new-poll-form">
        <div class="form-group">
          <label for="poll-title" class="col-lg-2 control-label">Title</label>
          <div class="col-lg-10">
            <input name="poll[title]" type="text" class="form-control" id="poll-title" placeholder="Title">
          </div>
        </div>
        <div class="form-group">
          <label for="poll-description" class="col-lg-2 control-label">Description</label>
          <div class="col-lg-10">
            <textarea name="poll[text]" class="form-control" rows="3" id="poll-description" placeholder="Description"></textarea>
            <span class="help-block"></span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-2 control-label">Add Question</label>
          <div class="col-lg-10 input-group">
            <input type="text" class="form-control" id="question-queuer" placeholder="Question">
          </div>
        </div>
        <div class="form-group" id="question-buttons">
          <div class="col-xs-4 col-xs-offset-4">
            <button type="reset" class="btn btn-default">Remove</button>
            <button id="add-question" type="submit" class="btn btn-default">Add</button>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12 col-lg-10 col-lg-offset-2">
            <div class="col-xs-12" id="question-queue">
            </div>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label">Privacy</label>
          <div class="col-lg-10">
            <label>
              <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2"> Public
            </label>
            <label>
              <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2"> Private
            </label>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <div class="col-xs-12" id="submitted-answers"></div>
            <span class="help-block"></span>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-4 col-xs-offset-8">
            <button type="reset" class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
            <span class="help-block"></span>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="col-xs-12 col-md-6 col-lg-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h4 class="panel-title">Your Active Polls</h4>
    </div>
    <ul class="list-group user-polls" data-id="<%= user.id %>">
    </ul>
  </div>
</div>
